<h1 class="brgr-hdr">Eat-Da-Burger</h1>
<div class="brgr-list">
  <div class="notEaten"> 
    <h2>Waiting for You!</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="brgr-waiting">
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured">
              <button class="brgr-dvr" type="submit">Devour!</button>
            </form>

          </li>
          {{/unless}}
        
      {{/each}}
    </ul>
  </div>
  <div class="devoured">
    <h2>Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="brgr-eaten">
            {{this.burger_name}}
          </li>
          {{/if}}
        
      {{/each}}
    </ul>
  </div>

</div>

<div class="brgr-add">
  <form class="create-form" action="/" method="POST">

    <div class="form-group">
      <input class="add-txt" type="textarea" id="brgr" name="name">
    </div>

    <button class="sbt-txt" type="submit">Submit</button>
  </form>
</div>